{
    "name": "hippo",
    "version": "1.0.0",
    "author": "Micha Hanselmann",
    "description": "asset size comparison and reporting tool",
    "private": true,
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "start": "node index.ts",
        "test": "node --test tests/*.test.ts",
