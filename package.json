{
    "name": "hippo",
    "version": "1.0.0",
    "author": "Micha Hanselmann",
    "description": "asset size comparison and reporting tool",
    "private": true,
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "start": "node index.ts",
        "prepare": "husky",
        "lint": "prettier --check \"src/**/*.ts\" index.ts",
        "format": "prettier --write \"src/**/*.ts\" index.ts",
        "typecheck": "tsc --noEmit"
    },
    "engines": {
        "node": ">=24.0.0"
    },
    "keywords": [],
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^22.9.0",
        "@types/semver": "^7.5.8",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.0",
        "prettier": "^3.3.3",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*/*.ts": "prettier --write"
    },
    "dependencies": {
        "@octokit/rest": "^22.0.0",
        "@slack/bolt": "^4.1.0",
        "dotenv": "^16.4.5",
        "semver": "^7.6.3"
    }
}
